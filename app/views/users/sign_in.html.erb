<h1>Sign in</h1>

<div class="sign_in">
  <%= form_for(:session, url: user_path) do |f| %>
    <%= f.label :login, 'STIL-id' %>
    <%= f.text_field :login %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Proceed' %>
  <% end %>
</div>
<div class="sign_in_info">
  <p>If this is your first time signing in an email will be sent to your STIL-email verifiying your account.</p>

  <!-- <p>Forgot your password?</p> -->
</div>
