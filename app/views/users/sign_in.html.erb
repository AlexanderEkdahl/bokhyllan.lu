<h1><%= title(t(:sign_in)) %></h1>

<div>
  <%= form_for(@user, url: user_path, html: { class: 'form' }, method: :post) do |f| %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
    <%= f.label :login %>
    <%= f.email_field :login %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit(class: 'button') %>
  <% end %>
</div>
<div>
  <p><%= t(:first_time_login_info) %></p>
</div>
