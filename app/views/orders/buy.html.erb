<h1><%= t(:has_your_copy, user: @order.user, item: @order.item.name) %></h1>

<% if night? %>
  <p><%= t(:contact_next_morning) %></p>
<% elsif @order.user.try(:phone).blank? %>
  <%= t(:contact_immediately) %>
<% else %>
  <table>
    <tr>
      <td><%= t(:contact_immediately_with_qr, name: @order.user) %></td>
      <td><%= qr(@order.user, 140) %></td>
    </tr>
  </table>
<% end %>

<h2><%= t(:contact_information) %></h2>

<table>
  <% contact_information_with_keys(@order.user) do |key, value| %>
    <tr>
      <td><%= key %>:</td>
      <td><%= value %></td>
    </tr>
  <% end %>
</table>
