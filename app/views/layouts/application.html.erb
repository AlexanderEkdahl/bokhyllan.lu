<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags(site: 'Bokhyllan.lu', separator: '&middot;'.html_safe, reverse: true, keywords: Metatags::default_tags) %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <header>
      <%= link_to(root_path) do %>
        <%= image_tag('logo.png', size: '60') %>
        <h1>Bokhyllan<span>.lu</span></h1>
      <% end %>
      <nav>
        <%= nav(home, sign_in, user, sign_out) %>
      </nav>
    </header>

    <div class="flash">
      <% flash.each do |k, v| %>
        <span class="<%= k %>"><%= v %></span>
      <% end %>
    </div>

    <main class="<%= "#{params[:controller]} #{params[:action]}" %>">
      <%= yield %>
    </main>
  </body>
</html>
