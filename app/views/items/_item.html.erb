<table class="properties">
  <% unless item.authors.empty? %>
    <tr>
      <td><%= t("activerecord.attributes.item.author_list") %>:</td>
      <td><%= item.authors.to_sentence %></td>
    </tr>
  <% end %>

  <% unless item.courses.empty? %>
    <tr>
      <td><%= t("activerecord.attributes.item.course_list") %>:</td>
      <td><%= item_courses(item) %></td>
    </tr>
  <% end %>

  <% unless item_programs(item).blank? %>
    <tr>
      <td><%= t("activerecord.attributes.item.program_list") %>:</td>
      <td><%= item_programs(item) %></td>
    </tr>
  <% end %>

  <% unless item.isbn.blank? %>
    <tr>
      <td><%= t("activerecord.attributes.item.isbn") %>:</td>
      <td><%= item.isbn %></td>
    </tr>
  <% end %>

  <% unless item.tags.empty? %>
    <tr>
      <td><%= t("activerecord.attributes.item.tag_list") %>:</td>
      <td><%= item_tags(item) %></td>
    </tr>
  <% end %>
</table>
